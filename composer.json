{
    "name":        "hostnet/asset-bundle",
    "type":        "symfony-bundle",
    "description": "Allows the configuration of the hostnet/asset-lib package in your Symfony application.",
    "license":     "MIT",
    "require": {
        "php":                          ">=7.3",
        "hostnet/asset-lib":            "^2.0.0",
        "symfony/config":               "^4.3 || ^5.0",
        "symfony/console":              "^4.3 || ^5.0",
        "symfony/dependency-injection": "^4.3 || ^5.0",
        "symfony/http-kernel":          "^4.3 || ^5.0",
        "symfony/process":              "^4.3 || ^5.0"
    },
    "require-dev": {
        "hostnet/phpcs-tool":       "^9.0.0",
        "phpspec/prophecy-phpunit": "^2.0.1",
        "phpunit/phpunit":          "^9.5.5",
        "symfony/framework-bundle": "^4.3 || ^5.0",
        "symfony/yaml":             "^4.3 || ^5.0",
        "twig/twig":                "^3.0.0"
    },
    "autoload": {
        "psr-4": {
            "Hostnet\\Bundle\\AssetBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hostnet\\Bundle\\AssetBundle\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "hostnet/*":                                      true,
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "archive": {
        "exclude": [
            "/test"
        ]
    }
}
